

{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <a href="/members/create">Novo</a>

        <table>                                         {# tabela #}
            <thead>                                     {# cabe√ßalho #}
                <tr>                                    {# linha / table row #}
                    <th>Membro</th>                 {# coluna #}
                    <th>Email</th>
                    <th>Altura</th>
                    <th>Peso</th>


                </tr>       
            </thead>
            <tbody>                                     {# corpo #}

                {% for member in members %}
                    <tr>                                {# linha / table row #}
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})">
                            </span>
                            {{ member.name }}
                        </td>                      
                        <td>{{ member.email }}</td>
                        <td>{{ member.height }} kg</td>
                        <td>{{ member.weight }} cm</td>
                        <td>
                            <a href="/members/{{ member.id }}">Detalhes</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </div>

{% endblock content %}